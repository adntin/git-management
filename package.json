{
  "name": "git-management",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "concurrently \"eslint src/*.js\" \"stylelint src/*.css\"",
    "lint:staged": "lint-staged",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adntin/git-management.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adntin/git-management/issues"
  },
  "homepage": "https://github.com/adntin/git-management#readme",
  "devDependencies": {
    "chalk": "^2.4.2",
    "commitizen": "^3.0.7",
    "concurrently": "^4.1.0",
    "cz-jira": "^1.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/validate-commit-msg.js",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "concurrent": true,
    "linters": {
      "src/*.{js, jsx}": "eslint",
      "src/*.css": "stylelint",
      "*.scss": "stylelint --syntax=scss"
    },
    "ignore": [
      "dist/*",
      "node_modules/*"
    ]
  }
}
